        "dmp_format":{
            "type":"string",
            "enum":["common metadata"]
        },
        "funding_agency":{
            "type":"array",
            "items":{
                "type":"object",
                "required":["name"],
                "properties":{
                    "name":{"type":"string"},
                    "url":{
                        "type":"string",
                        "format":"url"
                    },
                    "ror":{
                        "type":"string",
                        "format":"url"
                    }

                }
            }
        },
        "project_name":{
            "type":"string"
        },
        "e-Rad_project_id":{
            "type":"string"
        },
        "research_filed":{
            "type":"string"
        },
        "creators":{
            "type":"array",
            "items":{
                "type":"object",
                "required":["name", "email","affiliation"],
                "properties":{
                    "name":{"type":"string"},
                    "orcid":{
                        "type":"string",
                        "format":"url"
                    },
                    "url":{
                        "type":"string",
                        "format":"url"
                    },
                    "email":{
                        "type":"string",
                        "format":"email"
                    },
                    "affiliation":{"type":"string"}
                }
            }
        },
        "affiliations":{
            "type":"array",
            "items":{
                "type":"object",
                "required":["name"],
                "properties":{
                    "name":{"type":"string"},
                    "ror":{
                        "type":"string",
                        "format":"url"
                    },
                    "url":{
                        "type":"string",
                        "format":"url"
                    }
                }
            }
        }
    }
}